{
	"name": "wa2",
	"displayName": "WA2",
	"description": "Well-Architected 2 features, including cross-stack validation for CloudFormation",
	"version": "0.0.3",
	"engines": {
		"vscode": "^1.95.0"
	},
	"publisher": "FigmentEngineLtd",
	"categories": [
		"Programming Languages",
		"Linters"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/unremarkable-technology/wa2-vscode-extension"
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.10",
		"@types/node": "22.x",
		"@types/vscode": "^1.95.0",
		"@vscode/test-cli": "^0.0.12",
		"@vscode/test-electron": "^2.5.2",
		"eslint": "^9.39.1",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.3"
	},
	"dependencies": {
		"vscode-languageclient": "^9.0.1"
	},
	"contributes": {
		"languages": [
			{
				"id": "cloudformation-yaml",
				"aliases": [
					"CloudFormation (YAML)",
					"cfn-yaml"
				],
				"extensions": [
					".yaml",
					".yml"
				],
				"configuration": "./language-configuration.json"
			},
			{
				"id": "cloudformation-json",
				"aliases": [
					"CloudFormation (JSON)",
					"cfn-json"
				],
				"extensions": [
					".json"
				],
				"configuration": "./language-configuration.json"
			}
		]
	}
}
